{
  "name": "root",
  "version": "1.0.3",
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "vitest --passWithNoTests",
    "release": "run-s release:check release:version release:publish",
    "release:version": "bumpp package.json packages/*/package.json --execute=\"pnpm release:changelog\"",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:check": "run-s lint test",
    "release:publish": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.5.0",
    "stylelint": "^14.9.1",
    "vitest": "^0.17.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@qxy",
    "root": true
  }
}
