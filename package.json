    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pnpm": "^7.5.0",
    "stylelint": "^14.9.1",
    "vitest": "^0.17.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@qxy",
    "root": true
  }
}
