{
  "name": "root",
  "version": "1.0.8",
  "private": true,
  "packageManager": "pnpm@7.14.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "vitest --passWithNoTests",
    "release": "run-s release:check release:version release:publish",
    "release:version": "bumpp package.json packages/*/package.json",
    "release:check": "run-s lint test",
    "release:publish": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "bumpp": "^8.2.1",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.14.0",
    "stylelint": "^14.14.0",
    "vite": "^3.2.0",
    "vitest": "^0.24.3"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
