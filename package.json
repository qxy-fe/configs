{
  "name": "@qxy/configs",
  "version": "1.4.2",
  "private": true,
  "packageManager": "pnpm@8.4.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:version release:publish",
    "release:publish": "pnpm -r publish --access public",
    "release:version": "bumpp -r",
    "test": "vitest"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "@qxy/prettier-config": "workspace:*",
    "@types/node": "^18.16.3",
    "bumpp": "^9.1.0",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.4.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.1",
    "vitest": "^0.30.1"
  },
  "prettier": "@qxy/prettier-config",
  "nano-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
