{
  "name": "@qxy/configs",
  "version": "1.2.0",
  "private": true,
  "packageManager": "pnpm@7.27.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:version release:publish",
    "release:publish": "pnpm -r publish --access public",
    "release:version": "bumpp package.json packages/*/package.json",
    "test": "vitest"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "@types/node": "^18.13.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.33.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.27.0",
    "stylelint": "^15.0.0",
    "vitest": "^0.28.4"
  },
  "nano-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
