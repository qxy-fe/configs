{
  "name": "@qxy/configs",
  "version": "1.1.2",
  "private": true,
  "packageManager": "pnpm@7.18.2",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:version release:publish",
    "release:version": "bumpp package.json packages/*/package.json",
    "release:publish": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "bumpp": "^8.2.1",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.18.2",
    "stylelint": "^14.16.0"
  },
  "nano-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
