{
  "name": "@qxy/configs",
  "version": "2.0.0-beta.2",
  "private": true,
  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:version release:publish",
    "release:publish": "pnpm -r publish --access public --tag next",
    "release:version": "bumpp -r",
    "test": "vitest"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "@qxy/prettier-config": "workspace:*",
    "@types/eslint": "^8.44.6",
    "@types/node": "^20.8.9",
    "bumpp": "^9.2.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.10.0",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "vitest": "^0.34.6"
  },
  "prettier": "@qxy/prettier-config",
  "nano-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
