{
  "name": "root",
  "version": "1.1.0",
  "private": true,
  "packageManager": "pnpm@7.16.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:check release:version release:publish",
    "release:version": "bumpp package.json packages/*/package.json",
    "release:check": "run-s lint",
    "release:publish": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "bumpp": "^8.2.1",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.16.1",
    "stylelint": "^14.15.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
