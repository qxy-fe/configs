{
  "name": "@qxy/configs",
  "version": "2.0.0-beta.4",
  "private": true,
  "packageManager": "pnpm@8.12.0",
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:version release:publish",
    "release:publish": "pnpm -r publish --access public --tag next",
    "release:version": "bumpp -r",
    "test": "vitest"
  },
  "devDependencies": {
    "@qxy/eslint-config": "workspace:*",
    "@qxy/prettier-config": "workspace:*",
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.4",
    "bumpp": "^9.2.1",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.12.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "vitest": "^1.0.4"
  },
  "prettier": "@qxy/prettier-config",
  "nano-staged": {
    "*.{js,ts,json,md,yaml,yml}": "eslint --fix"
  }
}
